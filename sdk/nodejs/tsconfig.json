{
    "compilerOptions": {
        "outDir": "bin",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "files": [
        "config/index.ts",
        "config/vars.ts",
        "index.ts",
        "machine/index.ts",
        "machine/machine.ts",
        "networkadapter/index.ts",
        "networkadapter/networkAdapter.ts",
        "provider.ts",
        "utilities.ts",
        "vhdfile/index.ts",
        "vhdfile/vhdFile.ts",
        "virtualswitch/index.ts",
        "virtualswitch/virtualSwitch.ts"
    ]
}
